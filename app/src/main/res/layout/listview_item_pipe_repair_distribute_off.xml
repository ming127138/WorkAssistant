<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/sw_15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="@dimen/sw_10dp">

        <TextView
            android:id="@+id/listview_item_pipe_repair_distribute_off_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="工单ID"
            android:textColor="@color/white"
            android:textSize="@dimen/sw_15dp" />

        <ImageView
            android:id="@+id/listview_item_pipe_repair_distribute_off_urgent_iv"
            android:layout_width="@dimen/sw_20dp"
            android:layout_height="@dimen/sw_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/btn_urgent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/listview_item_pipe_repair_distribute_off_bg_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sw_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息1："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_pipe_repair_distribute_off_info1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXX"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/sw_10dp"
            android:paddingRight="@dimen/sw_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息2："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_pipe_repair_distribute_off_info2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXX"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sw_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息3："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_pipe_repair_distribute_off_info3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXX"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/sw_10dp"
            android:layout_marginRight="@dimen/sw_10dp"
            android:background="@color/grey"/>

        <RelativeLayout
            android:id="@+id/listview_item_pipe_repair_distribute_off_distribute_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sw_10dp"
            android:layout_marginTop="@dimen/sw_5dp">

            <ImageView
                android:id="@+id/listview_item_pipe_repair_distribute_off_icon_iv"
                android:layout_width="@dimen/sw_30dp"
                android:layout_height="@dimen/sw_20dp"
                android:src="@drawable/icon_confirm"/>

            <TextView
                android:id="@+id/listview_item_pipe_repair_distribute_off_sign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/listview_item_pipe_repair_distribute_off_icon_iv"
                android:text="确认收到"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_15dp"/>

            <TextView
                android:id="@+id/listview_item_pipe_repair_distribute_off_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="00时40分"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp"
                android:layout_toLeftOf="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/sw_20dp"
                android:layout_height="@dimen/sw_20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/sw_10dp"
                android:src="@drawable/btn_arrow"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
