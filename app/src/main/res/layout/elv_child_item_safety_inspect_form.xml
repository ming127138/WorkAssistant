<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/sw_5dp">

    <LinearLayout
        android:id="@+id/elv_child_item_safety_inspect_form_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/elv_child_item_safety_inspect_form_iv"
            android:layout_width="@dimen/sw_20dp"
            android:layout_height="@dimen/sw_20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/login_checkbox_off"/>

        <TextView
            android:id="@+id/elv_child_item_safety_inspect_form_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sw_5dp"
            android:layout_gravity="center_vertical"
            android:text="你好"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>
    </LinearLayout>
</LinearLayout>
