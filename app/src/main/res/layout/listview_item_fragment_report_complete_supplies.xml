<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/sw_5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="材料列表："
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_15dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="名称"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="规格"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="单位"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="数量"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_12dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <com.gzrijing.workassistant.widget.MyListView
        android:id="@+id/listview_item_fragment_report_complete_supplies_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
