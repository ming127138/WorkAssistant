<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.PipeInspectionReportActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/sw_10dp">

            <com.gzrijing.workassistant.widget.MyListView
                android:id="@+id/pipe_inspection_report_fault_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/pipe_inspection_report_remark_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/sw_100dp"
                android:gravity="top"
                android:padding="@dimen/sw_5dp"
                android:hint="备注"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sw_10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/sw_10dp">

                <ImageView
                    android:id="@+id/pipe_inspection_report_photo_iv1"
                    android:layout_width="@dimen/sw_100dp"
                    android:layout_height="@dimen/sw_100dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/upload_photo" />

                <ImageView
                    android:id="@+id/pipe_inspection_report_photo_iv2"
                    android:layout_width="@dimen/sw_100dp"
                    android:layout_height="@dimen/sw_100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sw_20dp"
                    android:src="@drawable/upload_photo"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
