<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_text"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listview_item_map_marker_info_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编号："
        android:textColor="@color/black"
        android:textSize="@dimen/sw_12dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信息："
        android:textColor="@color/black"
        android:textSize="@dimen/sw_12dp"/>

    <TextView
        android:id="@+id/listview_item_map_marker_info_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/sw_200dp"
        android:layout_toRightOf="@+id/TextView1"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_12dp"/>

   </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/listview_item_map_marker_info_inspection_btn"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_30dp"
            android:background="@drawable/btn_blue"
            android:text="点检"
            android:textColor="@color/white"
            android:textSize="@dimen/sw_12dp"/>
        <Button
            android:id="@+id/listview_item_map_marker_info_report_btn"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_30dp"
            android:layout_toRightOf="@+id/listview_item_map_marker_info_inspection_btn"
            android:background="@drawable/btn_blue"
            android:layout_marginLeft="@dimen/sw_10dp"
            android:text="上报"
            android:textColor="@color/white"
            android:textSize="@dimen/sw_12dp"/>
        />
    </RelativeLayout>

</LinearLayout>
