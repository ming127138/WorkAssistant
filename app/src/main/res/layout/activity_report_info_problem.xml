<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.ReportInfoProblemActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问题描述："
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp" />

    <TextView
        android:id="@+id/report_info_problem_describe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/sw_10dp">

        <ImageView
            android:id="@+id/report_info_problem_photo1_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_100dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/download_photo" />

        <ImageView
            android:id="@+id/report_info_problem_photo2_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_100dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sw_20dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/report_info_problem_photo3_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_100dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sw_20dp"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>
