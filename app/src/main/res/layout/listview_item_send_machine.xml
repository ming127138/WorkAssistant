<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/sw_5dp">

    <TextView
        android:id="@+id/listview_item_send_machine_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp"/>

    <Button
        android:id="@+id/listview_item_send_machine_info_btn"
        android:layout_width="@dimen/sw_50dp"
        android:layout_height="@dimen/sw_30dp"
        android:background="@drawable/btn_blue_frame"
        android:layout_gravity="center"
        android:text="信息"
        android:textColor="@color/blue"
        android:textSize="@dimen/sw_15dp"/>

    <ImageView
        android:id="@+id/listview_item_send_machine_qrcode_iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/sw_30dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/icon_qrcode"/>

</LinearLayout>
