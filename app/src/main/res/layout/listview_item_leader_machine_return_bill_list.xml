<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/sw_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">

        <TextView
            android:id="@+id/listview_item_leader_machine_return_bill_list_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/sw_10dp"
            android:text="申请单号"
            android:textColor="@color/white"
            android:textSize="@dimen/sw_15dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关联工程编号："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_leader_machine_return_bill_list_order_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/sw_10dp"
            android:paddingRight="@dimen/sw_10dp"
            android:paddingBottom="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请时间："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_leader_machine_return_bill_list_apply_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/sw_10dp"
            android:paddingRight="@dimen/sw_10dp"
            android:paddingBottom="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退还类型："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_leader_machine_return_bill_list_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sw_10dp"
            android:layout_marginRight="@dimen/sw_10dp">
            <Button
                android:id="@+id/listview_item_leader_machine_return_bill_list_plan_btn"
                android:layout_width="@dimen/sw_60dp"
                android:layout_height="@dimen/sw_25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_blue_frame"
                android:text="安排退机"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_12dp"/>

            <Button
                android:id="@+id/listview_item_leader_machine_return_bill_list_info_btn"
                android:layout_width="@dimen/sw_60dp"
                android:layout_height="@dimen/sw_25dp"
                android:layout_toLeftOf="@+id/listview_item_leader_machine_return_bill_list_plan_btn"
                android:layout_marginRight="@dimen/sw_10dp"
                android:background="@drawable/btn_blue_frame"
                android:text="详细信息"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_12dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
