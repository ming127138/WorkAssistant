<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_content"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.PipeInspectionFragment">

    <TextView
        android:id="@+id/pipe_inspection_date_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_20dp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/pipe_inspection_gv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:horizontalSpacing="@dimen/sw_5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/sw_5dp"></GridView>


</LinearLayout>
