<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/sw_5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listview_item_notice_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_20dp"/>

    <TextView
        android:id="@+id/listview_item_notice_promulgator_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="发布者"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp"/>

    <TextView
        android:id="@+id/listview_item_notice_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="2015-10-29"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp"/>
</LinearLayout>
