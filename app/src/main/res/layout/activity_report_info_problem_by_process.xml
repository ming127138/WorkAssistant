<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.ReportInfoProblemByProcessActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="归属类型："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"/>

                <TextView
                    android:id="@+id/report_info_problem_by_process_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="点击选择"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sw_15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工程状态："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"/>

                <TextView
                    android:id="@+id/report_info_problem_by_process_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="点击选择"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sw_15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影响已派任务："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"/>

                <TextView
                    android:id="@+id/report_info_problem_by_process_influence_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="点击选择"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sw_15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关联工程编号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"/>

                <EditText
                    android:id="@+id/report_info_problem_by_process_relation_order_id_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edit_cursor_blue"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题原因："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"/>

                <EditText
                    android:id="@+id/report_info_problem_by_process_reason_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edit_cursor_blue"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/report_info_problem_by_process_submit_btn"
                android:layout_width="@dimen/sw_60dp"
                android:layout_height="@dimen/sw_30dp"
                android:layout_marginTop="@dimen/sw_5dp"
                android:layout_marginRight="@dimen/sw_5dp"
                android:background="@drawable/btn_blue_frame"
                android:layout_gravity="right"
                android:text="提交"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
