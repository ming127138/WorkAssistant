<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.QueryBeforeSuppliesActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/sw_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="排水口径："
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>

        <TextView
            android:id="@+id/query_before_supplies_caliber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/sw_100dp"
            android:hint="点击选择"
            android:background="@drawable/bg_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/query_before_supplies_query_btn"
            android:layout_width="@dimen/sw_60dp"
            android:layout_height="@dimen/sw_30dp"
            android:background="@drawable/btn_blue_frame"
            android:layout_marginLeft="@dimen/sw_10dp"
            android:text="查询"
            android:textColor="@color/blue"
            android:textSize="@dimen/sw_15dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="之前做过类似的工程："
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp"/>

    <ExpandableListView
        android:id="@+id/query_before_supplies_elv"
        android:groupIndicator="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
