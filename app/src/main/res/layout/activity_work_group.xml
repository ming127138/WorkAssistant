<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.WorkGroupActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sw_5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_30dp"
            android:layout_weight="1"
            android:src="@drawable/icon_subordinate"/>

        <TextView
            android:id="@+id/work_group_selected_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginLeft="@dimen/sw_5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_40dp"
        android:background="@color/grey_hint"
        android:orientation="horizontal"
        android:padding="@dimen/sw_5dp">

        <ImageView
            android:id="@+id/work_group_check_all_iv"
            android:layout_width="@dimen/sw_20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sw_5dp"
            android:src="@drawable/login_checkbox_off" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sw_5dp"
            android:gravity="center_vertical"
            android:text="全选"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_text"/>

    <ListView
        android:id="@+id/work_group_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_hint" />
</LinearLayout>
