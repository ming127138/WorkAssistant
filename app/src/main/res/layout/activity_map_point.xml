<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.MapPointActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/map_point_bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <Button
            android:id="@+id/map_point_back_btn"
            android:layout_width="@dimen/sw_50dp"
            android:layout_height="@dimen/sw_50dp"
            android:background="@drawable/btn_exit"/>

        <Button
            android:id="@+id/map_point_get_point_btn"
            android:layout_width="@dimen/sw_100dp"
            android:layout_height="@dimen/sw_40dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/sw_10dp"
            android:layout_marginRight="@dimen/sw_10dp"
            android:background="@drawable/btn_blue"
            android:text="获取坐标点"
            android:textColor="@color/white"
            android:textSize="@dimen/sw_15dp"/>
    </FrameLayout>
</LinearLayout>
