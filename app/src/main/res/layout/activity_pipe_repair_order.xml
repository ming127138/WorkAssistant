<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.PipeRepairOrderActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pipe_repair_order_on_btn"
            android:layout_width="@dimen/sw_120dp"
            android:layout_height="@dimen/sw_40dp"
            android:background="@drawable/btn_paging_left_on"
            android:text="处理中"
            android:textColor="@color/white"
            android:textSize="@dimen/sw_15dp"/>

        <Button
            android:id="@+id/pipe_repair_order_off_btn"
            android:layout_width="@dimen/sw_120dp"
            android:layout_height="@dimen/sw_40dp"
            android:background="@drawable/btn_paging_right_off"
            android:text="待处理"
            android:textColor="@color/blue"
            android:textSize="@dimen/sw_15dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_pipe_repair_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />

</LinearLayout>
