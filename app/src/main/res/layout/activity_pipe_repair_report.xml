<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.PipeRepairReportActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sw_10dp"
                android:background="@drawable/bg_text"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sw_50dp"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/sw_5dp">

                    <LinearLayout
                        android:id="@+id/pipe_repair_report_progress_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pipe_repair_report_progress_iv"
                            android:layout_width="@dimen/sw_20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/spinner_item_check_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/sw_5dp"
                            android:text="汇报进度"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sw_15dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/pipe_repair_report_finish_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pipe_repair_report_finish_iv"
                            android:layout_width="@dimen/sw_20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/spinner_item_check_off" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/sw_5dp"
                            android:text="任务完成"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sw_15dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pipe_repair_report_finish_info_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/sw_5dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信息1："
                            android:textColor="@color/black"
                            android:textSize="@dimen/sw_15dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_line_gray_blue"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/edit_cursor_blue"
                            android:textSize="@dimen/sw_15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sw_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信息2："
                            android:textColor="@color/black"
                            android:textSize="@dimen/sw_15dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_line_gray_blue"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/edit_cursor_blue"
                            android:textSize="@dimen/sw_15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sw_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信息3："
                            android:textColor="@color/black"
                            android:textSize="@dimen/sw_15dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_line_gray_blue"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/edit_cursor_blue"
                            android:textSize="@dimen/sw_15dp" />

                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/pipe_repair_report_content_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sw_5dp"
                    android:background="@drawable/bg_text"
                    android:gravity="top"
                    android:hint="填写进度情况"
                    android:minHeight="@dimen/sw_120dp"
                    android:padding="@dimen/sw_5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sw_10dp"
                android:layout_marginRight="@dimen/sw_10dp"
                android:background="@drawable/bg_text"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="材料项目："
                        android:textColor="@color/black"
                        android:textSize="@dimen/sw_15dp" />

                    <Button
                        android:id="@+id/pipe_repair_report_edit_btn"
                        android:layout_width="@dimen/sw_50dp"
                        android:layout_height="@dimen/sw_20dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_blue_frame"
                        android:text="编辑"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sw_12dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/sw_5dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="名称"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sw_12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="规格"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sw_12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="单位"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sw_12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="单价/元"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sw_12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="数量"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sw_12dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <com.gzrijing.workassistant.widget.MyListView
                    android:id="@+id/pipe_repair_report_supplies_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.gzrijing.workassistant.widget.MyListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text"
                android:layout_margin="@dimen/sw_10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土建项目："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <Button
                    android:id="@+id/pipe_repair_report_save_btn"
                    android:layout_width="@dimen/sw_50dp"
                    android:layout_height="@dimen/sw_20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_blue_frame"
                    android:text="保存"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sw_12dp" />
                </RelativeLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sw_5dp"
                    android:background="@drawable/bg_text"
                    android:minHeight="@dimen/sw_120dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
