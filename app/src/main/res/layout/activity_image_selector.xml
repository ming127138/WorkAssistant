<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.ImageBrowserActivity">

    <TextView
        android:id="@+id/image_selector_top_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sw_5dp"
        android:text="0 / 0"
        android:textSize="@dimen/sw_30dp"
        android:textColor="@color/white"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/image_selector_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>
