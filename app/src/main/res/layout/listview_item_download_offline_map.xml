<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sw_15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/download_offline_map_city_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全国概略地图包"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp" />
        <TextView
            android:id="@+id/download_offline_map_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/download_offline_map_city_name_tv"
            android:layout_alignBottom="@+id/download_offline_map_city_name_tv"
            android:layout_marginLeft="@dimen/sw_10dp"
            android:text="27.4M"
            android:textColor="@color/grey_text"
            android:textSize="12dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/download_offline_map_downlond_btn"
                android:layout_width="@dimen/sw_40dp"
                android:layout_height="@dimen/sw_20dp"
                android:background="@drawable/btn_blue_frame"
                android:visibility="visible"
                android:text="下载"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_10dp" />
            <Button
                android:id="@+id/download_offline_map_pause_btn"
                android:layout_width="@dimen/sw_40dp"
                android:layout_height="@dimen/sw_20dp"
                android:background="@drawable/btn_blue_frame"
                android:visibility="gone"
                android:text="暂停"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_10dp" />
            <Button
                android:id="@+id/download_offline_map_delete_btn"
                android:layout_width="@dimen/sw_40dp"
                android:layout_height="@dimen/sw_20dp"
                android:background="@drawable/btn_blue_frame"
                android:visibility="gone"
                android:text="删除"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_10dp" />
        </FrameLayout>


    </RelativeLayout>

    <com.gzrijing.workassistant.widget.MyProgressBar
        android:id="@+id/download_offline_map_progressbar"
        style="@style/ProgressBar_Mini"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_15dp"
        android:progress="0"
        android:layout_marginTop="@dimen/sw_5dp"
        android:visibility="gone"/>

</LinearLayout>
