<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/sw_5dp">

    <TextView
        android:id="@+id/listview_item_fragment_report_complete_edittext_key_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp" />

    <EditText
        android:id="@+id/listview_item_fragment_report_complete_edittext_value_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/edit_cursor_blue"
        android:textSize="@dimen/sw_15dp" />

</LinearLayout>
