<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.PipeInspectionFormActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/sw_10dp"
                android:text="检查项目"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:background="@color/grey_hint"
                android:orientation="horizontal"
                android:padding="@dimen/sw_5dp">

                <ImageView
                    android:id="@+id/pipe_inspection_form_check_all_iv"
                    android:layout_width="@dimen/sw_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:src="@drawable/login_checkbox_off" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:gravity="center_vertical"
                    android:text="全选"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_text" />

            <com.gzrijing.workassistant.widget.MyListView
                android:id="@+id/pipe_inspection_form_standard_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/sw_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="存在问题："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <EditText
                    android:id="@+id/pipe_inspection_form_problem_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edit_cursor_blue"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sw_10dp">

                <Button
                    android:id="@+id/pipe_inspection_form_ok_btn"
                    android:layout_width="@dimen/sw_60dp"
                    android:layout_height="@dimen/sw_30dp"
                    android:background="@drawable/btn_blue"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/sw_10dp"
                    android:text="没问题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sw_15dp"/>

                <Button
                    android:id="@+id/pipe_inspection_form_problem_btn"
                    android:layout_width="@dimen/sw_60dp"
                    android:layout_height="@dimen/sw_30dp"
                    android:background="@drawable/btn_blue"
                    android:layout_toLeftOf="@+id/pipe_inspection_form_ok_btn"
                    android:layout_marginRight="@dimen/sw_10dp"
                    android:text="有问题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sw_15dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
