<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.PipeInspectionFormActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/sw_10dp"
                android:text="检查项目"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pipe_inspection_form_standard_checkbox1_iv"
                    android:layout_width="@dimen/sw_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:src="@drawable/login_checkbox_on" />

                <TextView
                    android:id="@+id/pipe_inspection_form_standard_name1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:text="井体"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pipe_inspection_form_standard_remark1_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:paddingLeft="@dimen/sw_10dp"
                android:paddingRight="@dimen/sw_10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <EditText
                    android:id="@+id/pipe_inspection_form_standard_remark1_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pipe_inspection_form_standard_checkbox2_iv"
                    android:layout_width="@dimen/sw_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:src="@drawable/login_checkbox_on" />

                <TextView
                    android:id="@+id/pipe_inspection_form_standard_name2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:text="井内杂物"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pipe_inspection_form_standard_remark2_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:paddingLeft="@dimen/sw_10dp"
                android:paddingRight="@dimen/sw_10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <EditText
                    android:id="@+id/pipe_inspection_form_standard_remark2_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pipe_inspection_form_standard_checkbox3_iv"
                    android:layout_width="@dimen/sw_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:src="@drawable/login_checkbox_on" />

                <TextView
                    android:id="@+id/pipe_inspection_form_standard_name3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:text="井盖"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pipe_inspection_form_standard_remark3_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:paddingLeft="@dimen/sw_10dp"
                android:paddingRight="@dimen/sw_10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <EditText
                    android:id="@+id/pipe_inspection_form_standard_remark3_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pipe_inspection_form_standard_checkbox4_iv"
                    android:layout_width="@dimen/sw_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:src="@drawable/login_checkbox_on" />

                <TextView
                    android:id="@+id/pipe_inspection_form_standard_name4_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:text="出水压力"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pipe_inspection_form_standard_remark4_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:paddingLeft="@dimen/sw_10dp"
                android:paddingRight="@dimen/sw_10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <EditText
                    android:id="@+id/pipe_inspection_form_standard_remark4_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_text" />

            <LinearLayout
                android:id="@+id/pipe_inspection_form_item5_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:padding="@dimen/sw_5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/pipe_inspection_form_standard_checkbox5_iv"
                    android:layout_width="@dimen/sw_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:src="@drawable/login_checkbox_on" />

                <TextView
                    android:id="@+id/pipe_inspection_form_standard_name5_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sw_5dp"
                    android:text="阀门性能"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pipe_inspection_form_standard_remark5_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sw_40dp"
                android:paddingLeft="@dimen/sw_10dp"
                android:paddingRight="@dimen/sw_10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <EditText
                    android:id="@+id/pipe_inspection_form_standard_remark5_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/sw_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="存在问题："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sw_15dp" />

                <EditText
                    android:id="@+id/pipe_inspection_form_problem_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_text"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edit_cursor_blue"
                    android:textSize="@dimen/sw_15dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sw_10dp"
                android:text="添加附件："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp"/>

            <com.gzrijing.workassistant.widget.WrapHeightGridView
                android:id="@+id/pipe_inspection_form_image_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/sw_10dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/sw_10dp" >
            </com.gzrijing.workassistant.widget.WrapHeightGridView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sw_10dp">

                <Button
                    android:id="@+id/pipe_inspection_form_submit_btn"
                    android:layout_width="@dimen/sw_60dp"
                    android:layout_height="@dimen/sw_30dp"
                    android:background="@drawable/btn_blue"
                    android:layout_alignParentRight="true"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sw_15dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
