<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.SuppliesReturnEditActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择退回机械："
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/supplies_return_edit_check_all_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/sw_15dp"
            android:layout_weight="2"
            android:src="@drawable/spinner_item_check_off" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="名称"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="规格"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="单位"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:text="数量"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_12dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.gzrijing.workassistant.widget.MyListView
                android:id="@+id/supplies_return_edit_return_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <Button
                android:id="@+id/supplies_return_edit_ok_btn"
                android:layout_width="@dimen/sw_50dp"
                android:layout_height="@dimen/sw_25dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/sw_5dp"
                android:layout_marginTop="@dimen/sw_5dp"
                android:background="@drawable/btn_blue_frame"
                android:text="确认"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
