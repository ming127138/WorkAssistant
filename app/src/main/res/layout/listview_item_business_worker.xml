<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/sw_15dp">

    <RelativeLayout
        android:id="@+id/listview_item_business_worker_head_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue" >

        <TextView
            android:id="@+id/listview_item_business_worker_order_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/sw_10dp"
            android:text="工单ID"
            android:textColor="@color/white"
            android:textSize="@dimen/sw_15dp" />

        <ImageView
            android:id="@+id/listview_item_business_worker_urgent_iv"
            android:layout_width="@dimen/sw_25dp"
            android:layout_height="@dimen/sw_25dp"
            android:layout_marginRight="@dimen/sw_5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_urgent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/listview_item_business_worker_bg_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工程类型："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_business_worker_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/sw_10dp"
            android:paddingRight="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工程状态："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_business_worker_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/sw_10dp"
            android:paddingLeft="@dimen/sw_10dp"
            android:paddingRight="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单时间："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_business_worker_received_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工程期限："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_business_worker_deadline_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/sw_10dp"
            android:paddingBottom="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余时间："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_business_time_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/sw_10dp"
            android:layout_marginRight="@dimen/sw_10dp"
            android:layout_marginBottom="@dimen/sw_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="临时信息："
                android:textColor="@color/black"
                android:textSize="@dimen/sw_15dp" />

            <TextView
                android:id="@+id/listview_item_business_worker_tem_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_15dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sw_10dp"
            android:layout_marginRight="@dimen/sw_10dp">

            <Button
                android:id="@+id/listview_item_business_worker_supplies_apply_btn"
                android:layout_width="@dimen/sw_60dp"
                android:layout_height="@dimen/sw_25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_blue_frame"
                android:text="材料申请"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_12dp"/>

            <Button
                android:id="@+id/listview_item_business_worker_info_btn"
                android:layout_width="@dimen/sw_60dp"
                android:layout_height="@dimen/sw_25dp"
                android:layout_toLeftOf="@+id/listview_item_business_worker_supplies_apply_btn"
                android:layout_marginRight="@dimen/sw_10dp"
                android:background="@drawable/btn_blue_frame"
                android:text="详细信息"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_12dp"/>

            <Button
                android:id="@+id/listview_item_business_worker_gps_btn"
                android:layout_width="@dimen/sw_60dp"
                android:layout_height="@dimen/sw_25dp"
                android:layout_toLeftOf="@+id/listview_item_business_worker_info_btn"
                android:layout_marginRight="@dimen/sw_10dp"
                android:background="@drawable/btn_blue_frame"
                android:text="工程定位"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_12dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sw_10dp"
            android:layout_marginRight="@dimen/sw_10dp">

            <Button
                android:id="@+id/listview_item_business_worker_project_amount_btn"
                android:layout_width="@dimen/sw_150dp"
                android:layout_height="@dimen/sw_25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_blue_frame"
                android:text="查询工程量单是否通过"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_12dp"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/sw_10dp"
            android:layout_marginRight="@dimen/sw_10dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/listview_item_business_worker_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw_5dp"
            android:padding="@dimen/sw_10dp">

            <TextView
                android:id="@+id/listview_item_business_worker_flag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:text="确认收到"
                android:textColor="@color/blue"
                android:textSize="@dimen/sw_15dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/sw_20dp"
                android:layout_height="@dimen/sw_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/sw_10dp"
                android:src="@drawable/btn_arrow" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
