<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzrijing.workassistant.view.GetGPSActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sw_5dp"
        android:text="坐标: "
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_5dp"
        android:layout_marginRight="@dimen/sw_5dp"
        android:background="@drawable/bg_text"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp"/>

    <Button
        android:layout_width="@dimen/sw_80dp"
        android:layout_height="@dimen/sw_30dp"
        android:layout_marginTop="@dimen/sw_10dp"
        android:layout_marginRight="@dimen/sw_5dp"
        android:layout_gravity="right"
        android:background="@drawable/btn_blue"
        android:text="获取坐标"
        android:textColor="@color/white"
        android:textSize="@dimen/sw_15dp"/>

</LinearLayout>
