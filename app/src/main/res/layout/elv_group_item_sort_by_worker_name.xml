<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/sw_10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/elv_group_item_sort_by_worker_name_iv"
        android:layout_width="@dimen/sw_20dp"
        android:layout_height="@dimen/sw_20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_red_dot"/>

    <TextView
        android:id="@+id/elv_group_item_sort_by_worker_name_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/sw_5dp"
        android:layout_gravity="center_vertical"
        android:text="你好"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp"/>

    <TextView
        android:id="@+id/elv_group_item_sort_by_worker_name_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_5dp"
        android:layout_marginRight="@dimen/sw_10dp"
        android:layout_gravity="center_vertical"
        android:text="10个任务"
        android:textColor="@color/blue"
        android:textSize="@dimen/sw_15dp"/>

</LinearLayout>
