<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/sw_5dp">

    <TextView
        android:id="@+id/listview_item_supplies_verify_id_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="单号"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp" />

    <TextView
        android:id="@+id/listview_item_supplies_verify_applicant_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="申请人"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp" />

    <TextView
        android:id="@+id/listview_item_supplies_verify_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:text="领用时间"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp" />
</LinearLayout>
