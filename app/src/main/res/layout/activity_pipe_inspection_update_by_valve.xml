<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.PipeInspectionUpdateByValveActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="阀门编号："
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>

        <TextView
            android:id="@+id/pipe_inspection_update_by_valve_item1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="阀门名称："
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>

        <EditText
            android:id="@+id/pipe_inspection_update_by_valve_item2_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="区域名称："
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>

        <EditText
            android:id="@+id/pipe_inspection_update_by_valve_item3_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="阀门型号："
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>

        <EditText
            android:id="@+id/pipe_inspection_update_by_valve_item4_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="阀门井型号："
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>

        <EditText
            android:id="@+id/pipe_inspection_update_by_valve_item5_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="详细地址："
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>

        <EditText
            android:id="@+id/pipe_inspection_update_by_valve_item6_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="阀门坐标："
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"/>

        <TextView
            android:id="@+id/pipe_inspection_update_by_valve_item7_tv"
            android:layout_width="@dimen/sw_150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sw_15dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/pipe_inspection_update_by_valve_item7_btn"
            android:layout_width="@dimen/sw_80dp"
            android:layout_height="@dimen/sw_30dp"
            android:background="@drawable/btn_blue_frame"
            android:layout_marginLeft="@dimen/sw_10dp"
            android:text="修改坐标"
            android:textColor="@color/blue"
            android:textSize="@dimen/sw_15dp"/>
    </LinearLayout>

</LinearLayout>
