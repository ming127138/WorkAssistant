<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/sw_10dp">

    <TextView
        android:id="@+id/listview_item_acceptance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="结算工单ID"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_15dp" />

    <Button
        android:id="@+id/listview_item_acceptance_btn"
        android:layout_width="@dimen/sw_50dp"
        android:layout_height="@dimen/sw_25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_blue_frame"
        android:text="结算"
        android:textColor="@color/blue"
        android:textSize="@dimen/sw_12dp" />

</RelativeLayout>
